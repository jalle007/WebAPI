      },
      source: function (request, response) {
        $.ajax({
          url: "/Images/Autocomplete",
          type: "POST",
          dataType: "json",
          data: { Prefix: request.term },
          success: function (data) {
            response($.map(data, function (item) {
              return { label: item, value: item };
            }))

          }
        })
      },
      messages: {
        noResults: "", results: ""
      }
    });
  })
</script>

}