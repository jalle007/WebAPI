<script type="text/javascript">
  $(document).ready(function () {
    $("#sku1").autocomplete({
      autoFocus: true,
      minLength: 2,
      select: function (event, ui) {
        console.log(ui.item.label);

        //$.ajax({
        //  url: "/Images/Index",
